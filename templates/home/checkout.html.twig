{% extends 'base.html.twig' %}

{% block title %}Paiement{% endblock %}

{% block body %}
    <section class="content">
        <div class="content-wrap pt-0">
            <div class="section m-0 login" style="background: #fff; margin-top: 150px !important;">
                <div class="container">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-lg-8 col-md-8 offset-md-2">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h4 class="mb-3">Paiement</h4>
                                    {% if tarif is defined %}
                                    <p><strong>Abonnement choisi :</strong> {{ tarif.name }}</p>
                                    <p><strong>Prix :</strong> {{ tarif.price }} €</p>
                                    <div class="align-right">
                                        <form class="nobottommargin" action="{{ url('user.checkout', {tarif: tarif.id}) }}" method="post">
                                            <input type="hidden" name="_token" value="{{ csrf_token('checkout' ~ tarif.id) }}">
                                            <button class="button button-rounded btn-block nott ls0 m-0" type="submit" value="submit">Valider le paiement</button>
                                        </form>
                                    </div>
                                    {% elseif success is defined and success %}
                                    <div class="alert alert-success nobottommargin" role="alert">
                                        Paiement validé ! Redirection vers le profil..
                                    </div>
                                    {% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
