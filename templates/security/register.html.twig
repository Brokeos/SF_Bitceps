{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <section class="content">
        <div class="content-wrap pt-0">
            <div class="section m-0 login" style="background: #fff; margin-top: 20px !important;">
                <div class="container">
                    <div class="row justify-content-between align-items-center">
                        <div class="col-lg-8 col-md-8 offset-md-2">
                            <div class="card shadow-sm">
                                <div class="card-body">
                                    <h4 class="mb-3">S'inscrire</h4>
                                    <div class="form-widget">
                                        {% if success is defined and success %}
                                            <div class="center">
                                                <div class="badge badge-pill badge-success">Inscription réussie ! Vous pouvez désormais vous <a href="{{ url('security.login') }}" style="color: white; text-decoration: underline !important;">connecter</a></div>
                                            </div>
                                        {% endif %}
                                        {{ form(form) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
